@model IEnumerable<NZWalks.UI.Models.DTO.RegionDto>

<h1 class="mt-3">Regions</h1>


<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add" >Add Region</a>
</div>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Code</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Name</td>
                <td>@region.Code</td>
                <td>
                    @if (!string.IsNullOrEmpty(region.RegionImageUrl))
                    {
                        <img src="@region.RegionImageUrl" alt="@region.Name" width="100" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>